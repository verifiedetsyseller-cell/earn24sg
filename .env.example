# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
# Option 1: MongoDB Atlas (Recommended)
# Get this from: https://cloud.mongodb.com -> Connect -> Drivers
# Format: mongodb+srv://username:password@cluster.xxxxx.mongodb.net/earn24sg?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/earn24sg?retryWrites=true&w=majority

# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/earn24sg

# JWT Secret Keys (CHANGE THESE IN PRODUCTION!)
# Generate strong random strings: https://randomkeygen.com/
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRE=24h

# Admin Credentials (CHANGE THESE!)
ADMIN_EMAIL=admin@earn24sg.com
ADMIN_PASSWORD=Admin@123456

# Security Settings
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100        # Max requests per window

# Session Secret
SESSION_SECRET=your_session_secret_change_this_12345
